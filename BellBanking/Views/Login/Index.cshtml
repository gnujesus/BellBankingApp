@model BellBankingApp.Core.Application.ViewModels.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="flex min-h-screen overflow-hidden">
    <!-- Left Side -->
    <div class="w-2/3 bg-cover" style="background-image: url('/static/images/login-image.jpg')">
        <div class="flex flex-col justify-center items-center h-full bg-opacity-75 bg-black p-8">
            <div class="flex items-center mb-6">
                <div class="flex-shrink-0 w-56 h-56 bg-transparent flex items-center justify-center">
                    <img src="/static/images/default.png" alt="BellBanking" class="h-56 w-56 rounded-lg">
                </div>
            </div>
            <p class="text-white text-center px-24">
                Manage your personal finances easily and securely. Our platform offers a comprehensive suite of tools to help you track spending, set budgets, and save for future goals. Enjoy seamless and secure access to your accounts anytime, anywhere.
            </p>
            <div class="flex justify-center mt-6 space-x-4">
                <a href="#" class="text-white text-2xl">
                    <i class="fab fa-facebook"></i>
                </a>
                <a href="#" class="text-white text-2xl">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="#" class="text-white text-2xl">
                    <i class="fab fa-twitter"></i>
                </a>
            </div>
        </div>
    </div>
    <!-- Right Side -->
    <div class="w-1/3 flex items-center justify-center">
        <div class="w-full max-w-md bg-white p-8 flex flex-col justify-center h-full">
            <h2 class="text-3xl font-semibold text-gray-700 mb-4">Welcome to BellBanking!</h2>

            @if (Model.HasError)
            {
                <div class="mb-4 text-red-500">
                    @Model.Error
                </div>
            }

            <form asp-action="Index" asp-controller="Login" method="post">
                <div class="mb-4">
                    <label asp-for="Username" class="block text-gray-700">Username</label>
                    <input asp-for="Username" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Username">
                    <span asp-validation-for="Username" class="text-red-500"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Password" class="block text-gray-700">Password</label>
                    <input asp-for="Password" type="password" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Password">
                    <span asp-validation-for="Password" class="text-red-500"></span>
                </div>
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <input type="checkbox" class="mr-2">
                        <label class="text-gray-700">Remember me?</label>
                    </div>
                    <a href="#" class="text-sm text-blue-500 hover:underline">Forgot password?</a>
                </div>
                <div class="flex justify-end">
                    <button type="submit" class="bg-blue-700 text-white px-8 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Sign in</button>
                </div>
            </form>
        </div>
    </div>
</div>
