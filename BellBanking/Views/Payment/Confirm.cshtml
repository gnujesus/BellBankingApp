@model SaveTransactionViewModel

<!-- Modal -->
<div class="container mx-auto p-4 max-w-7xl">
    <div class="bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-4">Confirm Payment</h1>
        <p>Are you sure you want to pay to the product @Model.DestinationAccount of @Model.User.FirstName @Model.User.LastName?</p>

        <div class="flex justify-end mt-4 space-x-4">
            <form asp-controller="Payment" asp-action="ExecuteExpressPayment" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md text-sm">
                    Yes
                </button>
            </form>

            <a asp-controller="Product" asp-action="Index" class="bg-green-600 text-white px-4 py-2 rounded-md text-sm">
                No
            </a>
        </div>
    </div>
</div>