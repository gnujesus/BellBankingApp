@model SaveProductViewModel

<div class="container mx-auto p-4 max-w-7xl">
    <h1 class="text-2xl font-bold mb-4">Create New Product</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <form asp-controller="Product" asp-action="CreateMainAccountPost" id="CreateMainAccount" method="post">
            
            <div class="mb-4">
                <label asp-for="UserId" class="hidden" hidden></label>
                <input asp-for="UserId" id="UserId" name="UserId" hidden />
            </div>

            <div class="mb-4">
                <label asp-for="Amount" class="hidden" hidden></label>
                <input asp-for="Amount" id="Amount" name="Amount" hidden />
            </div>

            <div class="mb-4">
                <label asp-for="Type" class="hidden" hidden></label>
                <input asp-for="Type" id="Type" name="Type" hidden />
            </div>

            <div>
                <label asp-for="IsMainAccount" class="hidden" hidden></label>
                <input asp-for="IsMainAccount" id="IsMainAccount" name="IsMainAccount" hidden />
            </div>

            <div class="flex justify-end">
                <button type="submit" >
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script type="text/javascript">
    document.forms["CreateMainAccount"].submit();
</script>
