<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BellBanking</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="overflow-hidden bg-white">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="flex min-h-screen">
            <!-- Sidebar -->
            <div class="w-16 h-screen bg-blue-900 text-white flex flex-col items-center py-4">
                <div class="flex items-center mb-6">
                    <img src="/static/images/default.png" alt="BellBanking" class="h-12 w-12 rounded-full">
                </div>
                <nav class="flex flex-col space-y-4 w-full">
                    <a href="#" class="flex items-center justify-center px-4 py-2 hover:bg-blue-700">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 576 512">
                            <path fill="currentColor" d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z" />
                        </svg>
                    </a>
                    <a href="#" class="flex items-center justify-center px-4 py-2 hover:bg-blue-700">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 512 512">
                            <path fill="currentColor" d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z" />
                        </svg>
                    </a>
                    <a href="#" class="flex items-center justify-center px-4 py-2 hover:bg-blue-700">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 448 512">
                            <path fill="currentColor" d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
                        </svg>
                    </a>
                    <a href="#" class="flex items-center justify-center px-4 py-2 hover:bg-blue-700">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 576 512">
                            <path fill="currentColor" d="M400 96l0 .7c-5.3-.4-10.6-.7-16-.7H256c-16.5 0-32.5 2.1-47.8 6c-.1-2-.2-4-.2-6c0-53 43-96 96-96s96 43 96 96zm-16 32c3.5 0 7 .1 10.4 .3c4.2 .3 8.4 .7 12.6 1.3C424.6 109.1 450.8 96 480 96h11.5c10.4 0 18 9.8 15.5 19.9l-13.8 55.2c15.8 14.8 28.7 32.8 37.5 52.9H544c17.7 0 32 14.3 32 32v96c0 17.7-14.3 32-32 32H512c-9.1 12.1-19.9 22.9-32 32v64c0 17.7-14.3 32-32 32H416c-17.7 0-32-14.3-32-32V448H256v32c0 17.7-14.3 32-32 32H192c-17.7 0-32-14.3-32-32V416c-34.9-26.2-58.7-66.3-63.2-112H68c-37.6 0-68-30.4-68-68s30.4-68 68-68h4c13.3 0 24 10.7 24 24s-10.7 24-24 24H68c-11 0-20 9-20 20s9 20 20 20H99.2c12.1-59.8 57.7-107.5 116.3-122.8c12.9-3.4 26.5-5.2 40.5-5.2H384zm64 136a24 24 0 1 0 -48 0 24 24 0 1 0 48 0z" />
                        </svg>
                    </a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="w-11/12 bg-white h-screen overflow-y-auto">
                <header class="bg-white py-4">
                    <div class="flex justify-between items-center px-8">
                        <div class="flex items-center space-x-2">
                            <a href="#" class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
                                <i class="fas fa-home mr-2"></i> Home Page
                            </a>
                            <i class="fas fa-chevron-right text-gray-500"></i>
                            <a href="#" class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
                                Dashboard
                            </a>
                        </div>
                        <a href="tel:+18294621757" class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
                            <i class="fas fa-phone mr-2"></i> +1 (829) 462-1757
                        </a>
                    </div>
                    <div class="w-full border-t border-gray-200 mt-4 mx-8"></div>
                </header>
                <div class="container mx-auto py-6 px-6">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="h-screen overflow-hidden bg-white">
            @RenderBody()
        </div>
    }

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
