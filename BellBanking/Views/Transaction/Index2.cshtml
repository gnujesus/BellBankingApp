@model List<ProductViewModel>

@inject IHttpContextAccessor httpContextAccessor
@{

    AuthenticationResponse user = new();
    var admin = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>(Roles.Admin.ToString());
    var customer = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>(Roles.Customer.ToString());
    if (admin != null)
    {
        user = admin;
    }
    else
    {
        user = customer;
    }
}

<div class="container mx-auto p-4 max-w-7xl">

    <h2 class="text-2xl font-bold mb-2">We need some more data before we can proceed, @user.UserName</h2>

    <div class="mt-4">
        <div class="flex justify-between items-center">
            <div class="flex space-x-4">
                <a class="text-gray-700" asp-controller="Transaction" asp-action="Index">
                    Beneficiaries
                </a>
                <a class="underline underline-offset-8">
                    My Products
                </a>
            </div>
            <p class="text-gray-600 text-sm">Total: @Model.Count Products</p>
        </div>

        <form method="post" asp-action="Transfer" asp-controller="Transaction">
            <div class="overflow-x-auto mt-4">
                <table class="min-w-full bg-white text-sm">
                    <thead>
                        <tr>
                            <th class="py-3 px-4 text-left text-gray-600">Selected</th>
                            <th class="py-3 px-4 text-left text-gray-600">Account Number</th>
                            <th class="py-3 px-4 text-left text-gray-600">Type</th>
                            <th class="py-3 px-4 text-left text-gray-600">Funds</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr class="border-b">
                                <td class="py-4 px-4">
                                    <input type="radio" name="selectedProductId" value="@product.Id" />
                                </td>
                                <td class="py-4 px-4">@product.AccountNumber</td>
                                <td class="py-4 px-4">@product.Type</td>
                                <td class="py-4 px-4">@product.Amount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="flex justify-end mt-4 gap-3">
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm flex items-center">
                    Next Step <i class="fas fa-arrow-right ml-2"></i>
                </button>

                <a href="#" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm flex items-center">
                    Unique Transaction <i class="fas fa-plus ml-2"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
