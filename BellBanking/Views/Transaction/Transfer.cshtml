@model SaveUserViewModel

<div class="container mx-auto p-4 max-w-7xl">
    <div class="flex justify-between mb-4">
        <a href="#" class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
            Transfer
        </a>
        <a href="#" class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
            402-7262857-6
        </a>
        <a href="tel:+18294621757" class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
            <i class="fas fa-phone mr-2"></i> +1 (829) 462-7157
        </a>
    </div>

    <div class="w-full border-t border-gray-200 mt-2 mb-4"></div>

    <h1 class="text-2xl font-bold mb-4">We need some data before we can proceed, @Model.Username.</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label for="dni" class="block text-gray-700">DNI</label>
                <input type="text" id="dni" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
            </div>
            <div>
                <label for="product-number" class="block text-gray-700">Product Number</label>
                <input type="text" id="product-number" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
            </div>
        </div>
        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label for="first-name" class="block text-gray-700">First Name</label>
                <input type="text" id="first-name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
            </div>
            <div>
                <label for="last-name" class="block text-gray-700">Last Name</label>
                <input type="text" id="last-name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
            </div>
        </div>
        <div class="mb-4">
            <label for="email" class="block text-gray-700">Beneficiary Email (Optional)</label>
            <input type="email" id="email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        </div>
        <div class="mb-4">
            <label for="phone-number" class="block text-gray-700">Beneficiary Phone Number (Optional)</label>
            <input type="text" id="phone-number" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        </div>
        <div class="flex justify-end">
            <button class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm flex items-center">
                Continue with the transaction <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
