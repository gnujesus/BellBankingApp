@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mx-auto p-4 max-w-7xl">
    <div class="flex justify-between mb-4">
        <button class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
            Beneficiaries
        </button>
        <button class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
            My Accounts
        </button>
        <a href="tel:+18294621757" class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
            <i class="fas fa-phone mr-2"></i> +1 (829) 462-1757
        </a>
    </div>

    <div class="w-full border-t border-gray-200 mt-2"></div>

    <div class="mt-4">
        <div class="flex justify-between items-center">
            <div class="flex space-x-4">
                <button class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
                    Beneficiaries
                </button>
                <button class="bg-white border border-gray-200 shadow-md px-4 py-2 rounded-md text-gray-800 flex items-center">
                    My Accounts
                </button>
            </div>
            <p class="text-gray-600 text-sm">Total: 16 Beneficiaries</p>
        </div>

        <div class="overflow-x-auto mt-4">
            <table class="min-w-full bg-white text-sm">
                <thead>
                    <tr>
                        <th class="py-3 px-4 text-left text-gray-600">Selected</th>
                        <th class="py-3 px-4 text-left text-gray-600">First Name</th>
                        <th class="py-3 px-4 text-left text-gray-600">Last Name</th>
                        <th class="py-3 px-4 text-left text-gray-600">DNI</th>
                        <th class="py-3 px-4 text-left text-gray-600">Account Type</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 5; i++)
                    {
                        <tr class="border-b">
                            <td class="py-4 px-4"><input type="checkbox" /></td>
                            <td class="py-4 px-4">Jon</td>
                            <td class="py-4 px-4">Doe</td>
                            <td class="py-4 px-4">402-7262857-6</td>
                            <td class="py-4 px-4">Savings</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="flex justify-end mt-4">
            <button class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm flex items-center">
                Unique Transaction <i class="fas fa-plus ml-2"></i>
            </button>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
