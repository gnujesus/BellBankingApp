@model SaveUserViewModel

<div class="container mx-auto p-4 max-w-7xl">
    <h1 class="text-2xl font-bold mb-4">Edit User</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        @if (Model.HasError)
        {
            <div class="mb-4 text-red-500">
                @Model.Error
            </div>
        }
        <form asp-controller="User" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IsActive" />
            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="FirstName" class="block text-gray-700"></label>
                    <input asp-for="FirstName" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label asp-for="LastName" class="block text-gray-700"></label>
                    <input asp-for="LastName" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" />
                    <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="Email" class="block text-gray-700"></label>
                    <input asp-for="Email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Username" class="block text-gray-700"></label>
                    <input asp-for="Username" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" />
                    <span asp-validation-for="Username" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700"></label>
                <input asp-for="Password" value="default" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" />
                <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="block text-gray-700"></label>
                <input asp-for="ConfirmPassword" value="default" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="NationalId" class="block text-gray-700"></label>
                <input asp-for="NationalId" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" />
                <span asp-validation-for="NationalId" class="text-red-500 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Rol" class="block text-gray-700"></label>
                <select asp-for="Rol" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm h-10 px-2" disabled>
                    @foreach (var role in Enum.GetValues(typeof(Roles)))
                    {
                        <option value="@role">@role</option>
                    }
                </select>
                <span asp-validation-for="Rol" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex justify-between">
                <!-- Botón de "ComeBack" alineado a la izquierda -->
                <div>
                    <a asp-controller="User" asp-action="Index" class="bg-green-600 text-white px-4 py-2 rounded-md text-sm">
                        ComeBack
                    </a>
                </div>

                <!-- Botón de "Update User" alineado a la derecha -->
                <div>
                    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm">
                        Update User
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}